{
  "parser": "babel-eslint",
    "extends": [
      "standard"
    ],
    "plugins": [
      "babel"
    ],
    "rules": {
      "key-spacing"                   : 0,
      "jsx-quotes"                    : [2, "prefer-single"],
      "max-len"                       : [2, { "code": 120, "tabWidth": 2, "ignoreStrings": true }],
      "object-curly-spacing"          : [2, "always"],
      "semi"                          : [2, "always", { "omitLastInOneLineBlock": true }],
      "camelcase"                     : 0,
      "quotes"                        : 0,
      "space-before-function-paren"   : 0,
      "no-undef"                      : 0,
      "indent"                        : [2, 2]
    }
}
